<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    tools:context=".ZaehlerstandUpdate" >

    <RelativeLayout
      	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/UpdateNumberGroup"
    	android:layout_centerHorizontal="true"  >
    
    <NumberPicker
        android:id="@+id/UpdateNumberPicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <NumberPicker
        android:id="@+id/UpdateNumberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UpdateNumberPicker1"
        android:layout_toRightOf="@+id/UpdateNumberPicker1" />

    <NumberPicker
        android:id="@+id/UpdateNumberPicker3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UpdateNumberPicker2"
        android:layout_toRightOf="@+id/UpdateNumberPicker2" />

    <NumberPicker
        android:id="@+id/UpdateNumberPicker4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UpdateNumberPicker3"
        android:layout_toRightOf="@+id/UpdateNumberPicker3" />

    <NumberPicker
        android:id="@+id/UpdateNumberPicker5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/UpdateNumberPicker4"
        android:layout_toRightOf="@+id/UpdateNumberPicker4" />
    
    
    <TextView
        android:id="@+id/textUpdateZaehler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpdateNumberPicker5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/update_zaehler_ende"
        android:textSize="26sp" />

    </RelativeLayout>
    
    <View
        android:id="@+id/updateLine"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/UpdateNumberGroup"
        android:layout_marginTop="6dp"
        android:background="#dcdcdc" />

    <Button
        android:id="@+id/buttonUpdateOK"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/updateLine"
        android:text="@string/OK"
        android:textSize="20sp" />

</RelativeLayout>