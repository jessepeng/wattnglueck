<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/kamera_wrapper">

    <org.fu.swphcc.wattnglueck.KameraPreview
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/kamera_preview" >
    </org.fu.swphcc.wattnglueck.KameraPreview>
    
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:background="#90000000"
           android:minHeight="130dp"
           android:id="@+id/kamera_preview_block_top"
          >

       </RelativeLayout>
    
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentBottom="true"
           android:background="#90000000"
           android:minHeight="130dp"
           android:id="@+id/kamera_preview_block_bottom"
          >

       </RelativeLayout>
       
	<RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/kamera_preview_block_top"
           android:layout_above="@+id/kamera_preview_block_bottom"
           android:layout_alignParentLeft="true"
           android:background="#90000000"
           android:minWidth="177.5dp"
          >
          

       </RelativeLayout>
       
		<RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/kamera_preview_block_top"
           android:layout_above="@+id/kamera_preview_block_bottom"
           android:layout_alignParentRight="true"
           android:background="#90000000"
           android:minWidth="177.5dp"
          >
          

       </RelativeLayout>
    
</RelativeLayout>